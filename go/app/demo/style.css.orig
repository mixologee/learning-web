body {
    font-family: helvetica, sans-serif, arial;
    font-size: 1em;
    color: #111;
}

h1 {
    text-align: center;
}

#terminal-container {
    width: 1000px;
    height: 750px;
    margin: 0 auto;
    padding: 2px;
}

p.codeText {
    color:blue;
    background-color:lightgray;
    font-family:"Lucida Console", Monaco, monospace;
}

.FixedHeightContainer
{
    float:right;
    height: 750px;
    width: 100%;
    padding:3px;
}

.LessonText
{
    height: 750px;
    width: 30%;
    float: left;
    overflow:auto;
}

.TerminalWindow
{
    height: 750px;
    margin-left: 3%;
    overflow:auto;
}

.LessonTextiFrame 
{
    width: 30%;
    height: 745px;
    position: absolute;
    display: block;
    top: 5;
    left: 5;
}

.dropbtn {
    background-color: #4CAF50;
    color: white;
    padding: 16px;
    font-size: 16px;
    border: none;
    cursor: pointer;
}

.dropdown {
    position: relative;
    display: inline-block;
    width: 100%;
    background-color: #4CAF50;
}

.dropdown-parent {
    display: none;
    position: absolute;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
}

.dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
}

.dropdown-content a:hover {background-color: #f1f1f1}

.dropdown:hover .dropdown-parent {
    display: block;
}

.dropdown-parent:hover .dropdown-content {
    display: block;
}

.dropdown:hover .dropbtn {
    background-color: #3e8e41;
}

